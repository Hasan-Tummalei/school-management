@model IEnumerable<CourseManagement.Models.StudentCourse>

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Subscribed Courses</h2>

<table>
    <thead>
        <tr>
            <th>Course</th>
            <th>Teacher</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subscription in Model)
        {
            <tr>
                <td>@subscription.Course?.Title</td>
                <td>@(subscription.Course?.Teacher != null ? subscription.Course.Teacher.Name : "Teacher Not Found")</td>
                <td>
                    <form method="post" action="@Url.Action("Unsubscribe", "Subscription", new { courseId = subscription.CourseId })">
                        <button type="submit">Unsubscribe</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="@Url.Action("Index", "Course")">Browse Courses</a>
